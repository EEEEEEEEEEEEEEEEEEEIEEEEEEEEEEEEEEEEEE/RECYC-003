.container {
  padding:0;
  background:#F9F9F9;
}
.card {
  width:375px;
  height:auto;
  margin-top:24px;
  background:white;
}
.card .item {
  width:343px;
  height:50px;
  padding:0 16px;
  border-top:0.5px solid #E5E5E5;
  line-height:50px;
}
.card .item:last-child {
  border-bottom:0.5px solid #E5E5E5;
}
.card .item view{
  float:right;
  color:#999999;
  font-size:12px;
}
.card .item .title {
  float:left;
  color:#666666;
  font-size:16px;
}
.card .item image {
  float:right;
  width:8px;
  height:13px;
  margin-top:19px;
  margin-left:8px;
}
.card .head {
  height:88px;
  line-height:88px;
}
.card .head image {
  float:right;
  width:50px;
  height:50px;
  margin-top:19px;
  border-radius:50%;
}